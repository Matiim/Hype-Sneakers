<header class="userProfile">
	<div>
		<p>Â¡Bienvenido !</p>
		<p><span class="bold">Nombre: </span>{{user.first_name}}</p>
		{{#if user.last_name}}<p><span class="bold">Apellido: </span>{{user.last_name}}</p>{{/if}}
		<p><span class="bold">Edad: </span>{{user.age}}</p>
		{{#if user.email}}<p><span class="bold">Email: </span>{{user.email}}</p>{{/if}}
		<p><span class="bold">Rol: </span>{{ user.role}}</p>
	</div>

    <a href="/logout" class="logout">Salir</a>
</header>


<section class="productsContainer">
	{{#if noProducts}}
	<h1>Carrito vacio</h1>
	{{else}}
	<h1>Carrito</h1>
	<table id="productos" class="tablehome">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Code</th>
    <th>Price</th>
    <th>Status</th>
    <th>Category</th>
    <th>Quantity</th>
  </tr>

  {{#each productsInCart}}
  <tr>
    <td>{{this.product._id}}</td>
    <td>{{this.product.title}}</td>
    <td>{{this.product.description}}</td>
    <td>{{this.product.code}}</td>
    <td>{{this.product.price}}</td>
    <td>{{this.product.status}}</td>
    <td>{{this.product.category}}</td>
    <td>{{this.quantity}}</td>
  </tr>
  {{/each}}
  </table>
</section>

   <div class="totals">
        <p><span class="bold">Total Quantity: </span>{{totalQuantity}}u</p>
        <p><span class="bold">Total Price: </span>${{totalPrice}}</p>
    </div>

    <div class="buttonsCart">
        <button id="deleteCartButton" data-cart-id="{{user.cart}}" class="delete">DELETE</button>
        <button class="buy" id="buy" data-cart-id="{{user.cart}}">BUY</button>
    </div>
    {{/if}}
</section>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>