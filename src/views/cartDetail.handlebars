<header class="info-user">
	<div>
		<p>Â¡Bienvenido !</p>
		<p><span class="bold">Nombre: </span>{{user.name}}</p>
		{{#if user.lastname}}<p><span class="bold">Apellido: </span>{{user.lastname}}</p>{{/if}}
		<p><span class="bold">Edad: </span>{{user.age}}</p>
		{{#if user.email}}<p><span class="bold">Email: </span>{{user.email}}</p>{{/if}}
		<p><span class="bold">Rol: </span>{{ user.role}}</p>
	</div>

    <a href="/logout">Salir</a>
</header>


<section class="productsContainer">
	{{#if noProducts}}
	<h1>Carrito vacio</h1>
	{{else}}
	<h1>Carrito</h1>
	<table id="productos" class="tablehome">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Code</th>
    <th>Price</th>
    <th>Status</th>
    <th>Category</th>
    <th>Quantity</th>
  </tr>

  {{#each productsInCart}}
  <tr>
    <td>{{this.product._id}}</td>
    <td>{{this.product.title}}</td>
    <td>{{this.product.description}}</td>
    <td>{{this.product.code}}</td>
    <td>{{this.product.price}}</td>
    <td>{{this.product.status}}</td>
    <td>{{this.product.category}}</td>
    <td>{{this.quantity}}</td>
  </tr>
  {{/each}}
  </table>
</section>