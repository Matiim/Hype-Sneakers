
<h1>Lista de Productos</h1>
<ul id="product-list">
  {{#each products}}
    <li id="{{this.id}}">{{this.id}} - {{this.title}} - ${{this.price}} </li>
  {{/each}}
</ul>



<div class="formsContainer">

   <form id="add-product-form" method="POST" action="/realTimeProducts">
    <legend>Add Product</legend>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required /><br />

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea><br />

    <label for="code">Code:</label>
    <input type="text" id="code" name="code" required /><br />

    <label for="price">Price:</label>
    <input
      type="text"id="price"name="price" required  title="Ingrese un número válido" ><br />

    <div class="status-container">
      <label for="status-true" class="status-label">Status:</label>
      <div class="status-radios">
        <input type="radio" id="status-true" name="status" value="true" checked />
        <label for="status-true" class="status-option">True</label>
        <input type="radio" id="status-false" name="status" value="false" />
        <label for="status-false" class="status-option">False</label>
      </div>
    </div>

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" required /><br />

    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required /><br />

    <label for="thumbnails">Thumbnails:</label>
    <input
      type="text"
      id="thumbnails"
      name="thumbnails"
      placeholder="Separar las URL de las imágenes por comas"
    /><br />

    <input type="submit" value="Agregar Producto" />
  </form>

  <form id="delete-product-form" method="DELETE" action="/realtimeproducts">
    <legend>Delete Product</legend>
    <label for="id">Id:</label>
    <input type="text" id="id" name="id" required /><br />

    <input type="submit" value="Delete-Product" />
  </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>