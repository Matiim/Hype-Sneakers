<h1 id="listaproductos">Lista de Productos</h1>

<section class="productsContainer" >
	{{#if noProducts}}
	<p>No hay productos disponibles</p>
	{{else}}


<table id="productos" class="tablehome">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Code</th>
    <th>Price</th>
    <th>Status</th>
    <th>Stock</th>
    <th>Category</th>
  </tr>

  {{#each products}}
  <tr>
    <td>{{this._id}}</td>
    <td>{{this.title}}</td>
    <td>{{this.description}}</td>
    <td>{{this.code}}</td>
    <td>{{this.price}}</td>
    <td>{{this.status}}</td>
    <td>{{this.stock}}</td>
    <td>{{this.category}}</td>
  </tr>
  {{/each}}
  
 </table>
  <article class="pagination">
    <p>Pagina {{productsData.page}} de {{productsData.totalPages}}</p>
    <div class="linksContainer">
      {{#if productsData.hasPrevPage}}
      <a href="{{generatePaginationLink productsData.prevPage}}">Pagina anterior</a>
      {{/if}}
      {{#if productsData.hasNextPage}}
      <a href="{{generatePaginationLink productsData.nextPage}}">Pagina siguiente</a>
      {{/if}}
    </div>
  </article>
  {{/if}}
</section>