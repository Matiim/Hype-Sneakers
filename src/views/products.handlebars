
<header class="user">
	<div>
		<p>¡Bienvenido !</p>
		<p><span class="bold">Nombre: </span>{{user.name}}</p>
		{{#if user.lastname}}<p><span class="bold">Apellido: </span>{{user.lastname}}</p>{{/if}}
		<p><span class="bold">Edad: </span>{{user.age}}</p>
		{{#if user.email}}<p><span class="bold">Email: </span>{{user.email}}</p>{{/if}}
		<p><span class="bold">Rol: </span>{{ user.role}}</p>
	</div>
	{{#if user.admin}}
	<a href="/realTimeProducts">RealTimeProducts</a><br>
	{{/if}}
	<a href="/carts/{{user.cart}}">Carrito</a>
    <a href="/logout">Salir</a>
</header>

<h1 id="lista">Lista de Productos</h1>
<section class="productsContainer">
    {{#if noProducts}}
    <p>No hay productos disponibles</p>
    {{else}}
    <table id="productos" class="table">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Status</th>
            <th >Product detail</th>
        </tr>

        {{#each products}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            {{#if this.status}}
            <td>Disponible</td>
            {{else}}
            <td>No disponible</td>
            {{/if}}
            <td>
                <div class="productOptions">
                    <a href="products/{{this._id}}"id="detail">{{this.title}}</i></a>
					{{#if this.status}}
					<button class="addToCartButton" data-user-id="{{../user.userId}}" data-product-id="{{this._id}}">Añadir al carrito</button>
					{{/if}}
                </div>
            </td>
        </tr>
        {{/each}}
    </table>
	{{/if}}
  <article class="pagination">
        <p>Pagina {{productsData.page}} de {{productsData.totalPages}}</p>
        <div class="linksContainer">
            {{#if productsData.hasPrevPage}}
            <a href="{{generatePaginationLink productsData.prevPage}}">Pag anterior</a>
            {{/if}}
            {{#if productsData.hasNextPage}}
            <a href="{{generatePaginationLink productsData.nextPage}}">Pag siguiente</a>
            {{/if}}
        </div>
    </article>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>