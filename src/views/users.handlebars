<header class="userProfile">
	
	<a href="/home">Home</a>
    <a href="/logout" class="logout">Salir</a>
</header>


{{#if noUsers}}
<h1>NO HAY USUARIOS EN LA BASE DE DATOS</h1>
{{else}}
<h1 id="lista">GESTIONAR USUARIOS</h1>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol</th>
        <th colspan="3">Options</th>
    </tr>
    {{#each users}}
    <tr id="{{this.id}}">
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td><input type="text" name="title" value="{{this.role}}" contenteditable="true" />
        </td>
        <td>
            <button class="editButton" onclick="updateUserRole('{{this.id}}')">Editar</button>
        </td>
        <td>
            <button class="deleteButton" onclick="deleteUser('{{this.id}}')">Eliminar</button>
        </td>
        <td>
            <input type="file" id="documents-{{this.id}}" name="documents" multiple>
            <br>
            <button class="button uploadButton" onclick="uploadDocuments('{{this.id}}')">Subir</button>
        </td>
    </tr>
    {{/each}}
</table>
<button class="deleteButton" onclick="deleteInactiveUsers()">Eliminar usuarios inactivos</button>
{{/if}}

<script src="/js/users.js"></script>